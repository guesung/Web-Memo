{
	"$schema": "https://unpkg.com/syncpack/dist/schema.json",
	"formatRepository": false,
	"formatBugs": false,
	"indent": "\t",
	"versionGroups": [
		{
			"label": "Expo app uses different TypeScript, @types/react, and React versions",
			"packages": ["@web-memo/app"],
			"dependencies": ["typescript", "@types/react", "react", "react-dom"],
			"isIgnored": true
		},
		{
			"label": "Shared package supports both React 18 and 19 via peerDeps",
			"packages": ["@web-memo/shared"],
			"dependencies": ["react", "react-dom"],
			"dependencyTypes": ["peer"],
			"isIgnored": true
		},
		{
			"label": "Use pinned versions for React core",
			"dependencies": ["react", "react-dom"],
			"dependencyTypes": ["!peer"],
			"pinVersion": "18.3.1"
		},
		{
			"label": "Use workspace protocol for internal packages",
			"dependencies": ["@web-memo/**", "@web-memo/**"],
			"dependencyTypes": ["!peer"],
			"pinVersion": "workspace:*"
		}
	]
}
