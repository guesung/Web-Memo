{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/app/**/*",
			"e2e/tests/**/*",
			"!**/dist/**",
			"!**/node_modules/**",
			"!**/.next/**",
			"!**/.vercel/**",
			"!**/.expo/**",
			"!**/tailwind-output.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noConfusingVoidType": "warn",
				"noDocumentCookie": "warn"
			}
		},
		"domains": {
			"react": "recommended"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
