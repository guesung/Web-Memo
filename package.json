{
	"name": "web-memo",
	"version": "1.8.5",
	"description": "Web Memo - Chrome Extension",
	"bugs": "https://github.com/guesung/Web-Memo/issues",
	"homepage": "https://web-memos.vercel.app",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/guesung/Web-Memo.git"
	},
	"scripts": {
		"clean": "rimraf dist && rimraf .turbo && turbo clean && rimraf node_modules",
		"format": "biome format --write",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"dev": "turbo watch dev",
		"dev-servmer": "pnpm -F hmr ready && pnpm -F hmr dev",
		"dev:web": "turbo watch dev --filter web",
		"dev:extension": "turbo watch dev --filter !web",
		"build": "turbo build",
		"build:web": "turbo build --filter=web",
		"build:extension": "turbo build --filter=!web",
		"start:web": "turbo start --filter=web",
		"zip": "turbo zip",
		"type-check": "turbo type-check",
		"tsc-watch": "turbo tsc-watch",
		"prepare": "husky",
		"test:jest": "vitest",
		"test:e2e": "playwright test --ui",
		"test-report:e2e": "playwright show-report",
		"update-version": "run-script-os",
		"update-version:win32": "bash update_version.sh",
		"update-version:default": "./update_version.sh",
		"package": "pnpm i && pnpm clean && pnpm build && pnpm zip",
		"generate-supabase-type": "supabase gen types --lang=typescript --project-id czwtqukymcqoberdoltq --schema feedback --schema memo > packages/shared/src/types/supabase.ts && biome format --write packages/shared/src/types/supabase.ts",
		"list": "node scripts/dev.js list",
		"generate": "node scripts/dev.js generate",
		"parse-prd": "node scripts/dev.js parse-prd"
	},
	"type": "module",
	"dependencies": {
		"@sentry/react": "^8.30.0",
		"@supabase/ssr": "^0.5.1",
		"@supabase/supabase-js": "^2.45.4",
		"@tanstack/react-query": "^5.59.0",
		"@tanstack/react-query-devtools": "^5.59.0",
		"boxen": "^7.1.1",
		"chalk": "^5.3.0",
		"cli-table3": "^0.6.3",
		"commander": "^11.1.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.5",
		"driver.js": "^1.3.1",
		"es-hangul": "^2.2.4",
		"framer-motion": "^11.11.8",
		"gradient-string": "^2.0.2",
		"lucide-react": "^0.456.0",
		"next": "14.2.10",
		"next-themes": "^0.4.3",
		"openai": "^4.57.0",
		"ora": "^7.0.1",
		"postcss-import": "^16.1.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-hook-form": "^7.53.2",
		"tsc-watch": "^6.2.1",
		"vite-plugin-svgr": "^4.3.0",
		"youtube-transcript": "^1.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@playwright/test": "^1.47.0",
		"@sentry/vite-plugin": "^2.22.4",
		"@types/chrome": "^0.0.268",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.14.10",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.3",
		"autoprefixer": "^10.4.19",
		"cross-env": "^7.0.3",
		"esbuild": "^0.23.0",
		"lint-staged": "^15.2.7",
		"overlay-kit": "^1.4.1",
		"postcss": "^8.4.38",
		"rimraf": "^6.0.1",
		"run-script-os": "^1.1.6",
		"supabase": "^1.192.5",
		"tailwindcss": "^3.4.10",
		"tslib": "^2.6.3",
		"turbo": "^2.1.1",
		"typescript": "5.5.3",
		"vite": "5.3.3",
		"vitest": "^2.1.5"
	},
	"sideEffects": false,
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": ">=18.12.0"
	}
}
