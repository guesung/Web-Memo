{
  "extends": "@extension/tsconfig/utils",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": ["./*"]
    },
    "jsx": "react-jsx",
    "types": ["chrome", "jest"],
    "emitDeclarationOnly": false,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
