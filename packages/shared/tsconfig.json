{
	"extends": "@web-memo/tsconfig/react",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"noEmit": false,
		"emitDeclarationOnly": false,
		"strictPropertyInitialization": false,
		"stripInternal": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"types": ["chrome", "node"]
	},
	"include": ["src"],
	"exclude": ["dist", "**/*.test.ts"]
}
