{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "ready": {
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["ready"],
      "outputs": ["dist/**", "build/**"],
      "env": ["__FIREFOX__", "VITE_MAKE_WEBHOOK_NOTION_API"],
      "persistent": true,
      "inputs": [".env"]
    },
    "build": {
      "dependsOn": ["^build", "ready"],
      "env": ["__FIREFOX__", "VITE_MAKE_WEBHOOK_NOTION_API"],
      "outputs": ["../../dist/**", "dist/**", "build/**"],
      "inputs": [".env"]
    },
    "zip": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "type-check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^test", "^build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
